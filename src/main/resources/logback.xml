<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Third-party libraries noise reduction -->
    <logger name="io.netty" level="ERROR"/>
    <logger name="io.ktor" level="WARN"/>
    <logger name="org.mongodb.driver" level="ERROR"/>
    <logger name="org.koin" level="ERROR"/>
    <logger name="com.aallam.openai" level="WARN"/>
    
    <!-- Application specific logging - keep INFO to see bot activity -->
    <logger name="com.kettlebell" level="INFO"/>
</configuration>